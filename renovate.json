{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "update-lockfile",
  "packageRules": [
    {
      "matchFiles": [
        "Cargo.toml"
      ],
      "matchPackageNames": [
        "bytemuck",
        "thiserror",
        "uuid"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "enabled": false,
      "description": "Production dependencies of library should be minimal, so only do major upgrades for dependencies with stable versions"
    },
    {
      "matchFiles": [
        "Cargo.toml"
      ],
      "matchPackageNames": [
        "num-derive",
        "num-traits",
        "tracing",
        "winapi",
        "windows-permissions",
        "zerocopy",
        "zerocopy-derive",
        "windows"
      ],
      "matchUpdateTypes": [
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "enabled": false,
      "description": "Production dependencies of library should be minimal, so only do major and minor upgrades for dependencies with unstable (0.x) versions"
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": ["zerocopy", "zerocopy-derive"],
      "groupName": "zerocopy monorepo",
      "groupSlug": "zerocopy-monorepo"
    },
    {
      "matchPackageNames": ["rustsec/audit-check"],
      "allowedVersions": "<2",
      "description": "v2 does not handle missing lockfiles correctly"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/.*\\.yml$"
      ],
      "matchStrings": [
        "\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s*versioning=(?<versioning>.*?)\\s*depName=(?<depName>.*?)\\s*\\n.*?:\\s*(?<currentValue>.*)\\s*"
      ]
    }
  ]
}
